{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "build",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "types": ["node", "vscode", "react", "react-dom"]
  },
  "exclude": ["node_modules", ".vscode-test", "positron", "**/__tests__/**", "**/*.test.ts", "**/*.spec.ts", "**/*.test.tsx", "**/*.spec.tsx", "**/__mocks__/**"]
}
