{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "build",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "vscode"]
  },
  "exclude": ["node_modules", ".vscode-test", "positron", "**/__tests__/**", "**/*.test.ts", "**/*.spec.ts"]
}
