{
  "name": "squiggy-positron",
  "displayName": "Squiggy",
  "description": "Visualize Oxford Nanopore sequencing data (squiggle plots) from POD5 files",
  "version": "0.1.12-alpha",
  "publisher": "rnabioco",
  "icon": "resources/icon-128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rnabioco/squiggy-positron.git"
  },
  "engines": {
    "vscode": "^1.74.0",
    "positron": "^2025.6.0"
  },
  "categories": [
    "Data Science",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./build/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "squiggy.openPOD5",
        "title": "Open POD5 File",
        "category": "Squiggy",
        "icon": "$(file-binary)"
      },
      {
        "command": "squiggy.openBAM",
        "title": "Open BAM File",
        "category": "Squiggy",
        "icon": "$(file-code)"
      },
      {
        "command": "squiggy.closePOD5",
        "title": "Close POD5 File",
        "category": "Squiggy",
        "icon": "$(close)"
      },
      {
        "command": "squiggy.closeBAM",
        "title": "Close BAM File",
        "category": "Squiggy",
        "icon": "$(close)"
      },
      {
        "command": "squiggy.loadTestData",
        "title": "Load Test Data",
        "category": "Squiggy",
        "icon": "$(database)"
      },
      {
        "command": "squiggy.plotRead",
        "title": "Plot Selected Read(s)",
        "category": "Squiggy",
        "icon": "$(graph)"
      },
      {
        "command": "squiggy.plotAggregate",
        "title": "Plot Aggregate for Reference",
        "category": "Squiggy",
        "icon": "$(graph-line)"
      },
      {
        "command": "squiggy.refreshReads",
        "title": "Refresh Read List",
        "category": "Squiggy",
        "icon": "$(refresh)"
      },
      {
        "command": "squiggy.clearState",
        "title": "Clear All State (After Kernel Restart)",
        "category": "Squiggy",
        "icon": "$(clear-all)"
      },
      {
        "command": "squiggy.openFASTA",
        "title": "Open FASTA File",
        "category": "Squiggy",
        "icon": "$(file-text)"
      },
      {
        "command": "squiggy.closeFASTA",
        "title": "Close FASTA File",
        "category": "Squiggy",
        "icon": "$(close)"
      },
      {
        "command": "squiggy.plotMotifAggregate",
        "title": "Plot Motif Aggregate",
        "category": "Squiggy",
        "icon": "$(graph-scatter)"
      },
      {
        "command": "squiggy.loadSample",
        "title": "Load Sample (Multi-Sample Comparison)",
        "category": "Squiggy",
        "icon": "$(folder-opened)"
      },
      {
        "command": "squiggy.loadTestMultiReadDataset",
        "title": "Load Test Multi-Read Dataset",
        "category": "Squiggy",
        "icon": "$(database)"
      },
      {
        "command": "squiggy.plotDeltaComparison",
        "title": "Plot Delta Comparison",
        "category": "Squiggy",
        "icon": "$(compare)"
      },
      {
        "command": "squiggy.loadDemoSession",
        "title": "Load Demo Session",
        "category": "Squiggy",
        "icon": "$(rocket)"
      },
      {
        "command": "squiggy.saveSession",
        "title": "Save Session",
        "category": "Squiggy",
        "icon": "$(save)"
      },
      {
        "command": "squiggy.restoreSession",
        "title": "Restore Session",
        "category": "Squiggy",
        "icon": "$(history)"
      },
      {
        "command": "squiggy.exportSession",
        "title": "Export Session to File",
        "category": "Squiggy",
        "icon": "$(export)"
      },
      {
        "command": "squiggy.importSession",
        "title": "Import Session from File",
        "category": "Squiggy",
        "icon": "$(import)"
      },
      {
        "command": "squiggy.clearSession",
        "title": "Clear Saved Session",
        "category": "Squiggy",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "squiggy-sidebar",
          "title": "Squiggy v0.1.12-alpha",
          "icon": "resources/icon-sidebar.svg"
        }
      ]
    },
    "views": {
      "squiggy-sidebar": [
        {
          "id": "squiggySessionPanel",
          "name": "Session Manager",
          "type": "webview"
        },
        {
          "id": "squiggyFilePanel",
          "name": "File Explorer",
          "type": "webview"
        },
        {
          "id": "squiggyReadList",
          "name": "Read Explorer",
          "type": "webview",
          "visibility": "collapsed"
        },
        {
          "id": "squiggyPlotOptions",
          "name": "Advanced Plotting",
          "type": "webview"
        },
        {
          "id": "squiggyModificationsPanel",
          "name": "Modifications Explorer",
          "type": "webview",
          "when": "squiggy.hasModifications"
        },
        {
          "id": "squiggyMotifSearch",
          "name": "Motif Explorer",
          "type": "webview",
          "visibility": "collapsed"
        },
        {
          "id": "squiggyComparisonSamples",
          "name": "Sample Comparison Manager",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "squiggy.refreshReads",
          "when": "view == squiggyReadList",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "squiggy.plotRead",
          "when": "view == squiggyReadList && viewItem == read",
          "group": "inline"
        },
        {
          "command": "squiggy.plotAggregate",
          "when": "view == squiggyReadList && viewItem == reference",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Squiggy",
      "properties": {
        "squiggy.defaultPlotMode": {
          "type": "string",
          "enum": [
            "SINGLE",
            "EVENTALIGN"
          ],
          "default": "SINGLE",
          "description": "Default plot mode for visualizations"
        },
        "squiggy.defaultNormalization": {
          "type": "string",
          "enum": [
            "NONE",
            "ZNORM",
            "MEDIAN",
            "MAD"
          ],
          "default": "ZNORM",
          "description": "Default signal normalization method"
        },
        "squiggy.downsampleThreshold": {
          "type": "number",
          "default": 100000,
          "description": "Downsample signals with more than this many samples"
        },
        "squiggy.theme": {
          "type": "string",
          "enum": [
            "LIGHT",
            "DARK"
          ],
          "default": "LIGHT",
          "description": "Plot color theme"
        },
        "squiggy.aggregateSampleSize": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 10000,
          "description": "Maximum number of reads to sample for aggregate plots"
        }
      }
    },
    "walkthroughs": [
      {
        "id": "squiggy.gettingStarted",
        "title": "Getting Started with Squiggy",
        "description": "Learn how to visualize Oxford Nanopore sequencing data with interactive squiggle plots",
        "steps": [
          {
            "id": "welcome",
            "title": "Welcome to Squiggy",
            "description": "Squiggy is a powerful tool for visualizing Oxford Nanopore sequencing data directly in Positron. You can explore raw signal data (squiggle plots), analyze base modifications, and compare signals across multiple reads.\n\n**Key Features:**\n- Interactive signal visualization with Bokeh\n- Base annotation overlay from BAM files\n- Modification detection and filtering\n- Multiple plot modes (single, overlay, stacked, eventalign, aggregate)\n- Signal normalization options\n\nLet's get started!",
            "media": {
              "image": "resources/walkthrough/welcome.png",
              "altText": "Squiggy visualization example"
            },
            "completionEvents": [
              "onView:squiggy.gettingStarted"
            ]
          },
          {
            "id": "loadDemo",
            "title": "Load Demo Session",
            "description": "First, let's load a demo session with sample data to explore Squiggy's features.\n\n[Load Demo Session](command:squiggy.loadDemoSession)\n\nThis will load test data from the extension including POD5 and BAM files, giving you immediate access to all visualization features.",
            "media": {
              "image": "resources/walkthrough/session-manager.png",
              "altText": "Session Manager panel"
            },
            "completionEvents": [
              "onCommand:squiggy.loadDemoSession"
            ]
          },
          {
            "id": "browseReads",
            "title": "Browse Available Reads",
            "description": "Once data is loaded, you can browse all available reads in the **Read Explorer** panel. This panel shows:\n- Read IDs\n- Sequence length\n- Quality scores\n- Reference alignment (when BAM loaded)\n- Mapping positions\n\nYou can search, filter, and select reads for visualization.\n\n[Open Read Explorer](command:squiggyReadList.focus)\n\nClick the button above to open the Read Explorer panel in the Squiggy sidebar.",
            "media": {
              "image": "resources/walkthrough/read-explorer.png",
              "altText": "Read Explorer with data"
            },
            "completionEvents": [
              "onView:squiggyReadList"
            ]
          },
          {
            "id": "visualizeRead",
            "title": "Visualize a Read",
            "description": "Now let's create your first plot! Select a read from the Read Explorer and click the plot icon, or use the command palette.\n\n[Plot Selected Read](command:squiggy.plotRead)\n\nSquiggy will generate an interactive Bokeh plot showing the raw signal data. You can:\n- Zoom and pan with mouse/trackpad\n- See base annotations (if BAM loaded)\n- Identify base modifications\n- Export plots to HTML/PNG/SVG",
            "media": {
              "image": "resources/walkthrough/plot-example.png",
              "altText": "Bokeh plot with annotations"
            },
            "completionEvents": [
              "onCommand:squiggy.plotRead"
            ]
          },
          {
            "id": "customizePlot",
            "title": "Customize Visualization",
            "description": "Use the **Advanced Plotting** panel to customize your visualizations:\n\n**Plot Modes:**\n- **SINGLE**: Single read signal\n- **OVERLAY**: Multiple reads overlaid\n- **STACKED**: Multiple reads stacked vertically\n- **EVENTALIGN**: Event-aligned with base annotations\n- **AGGREGATE**: Multi-read statistics (mean, median, quantiles)\n\n**Normalization:**\n- ZNORM: Z-score normalization\n- MEDIAN: Median centering\n- MAD: Median absolute deviation\n\n**Other Options:**\n- X-axis scaling by dwell time\n- Theme selection (light/dark)\n- Downsampling for large signals\n\n[Open Advanced Plotting](command:squiggyPlotOptions.focus)",
            "media": {
              "image": "resources/walkthrough/plot-options.png",
              "altText": "Plot Options panel"
            },
            "completionEvents": [
              "onView:squiggyPlotOptions"
            ]
          },
          {
            "id": "analyzeModifications",
            "title": "Analyze Base Modifications",
            "description": "If your BAM file contains modification tags (MM/ML), Squiggy can visualize modification probabilities.\n\nThe **Modifications Explorer** panel lets you:\n- View all detected modification types (5mC, 6mA, etc.)\n- Filter by modification probability threshold\n- Toggle modification tracks on/off\n- Color-code modifications in plots\n\n[Open Modifications Explorer](command:squiggyModificationsPanel.focus)\n\n*Note: This panel only appears when modification data is available.*",
            "media": {
              "image": "resources/walkthrough/modifications.png",
              "altText": "Modifications Explorer"
            },
            "when": "squiggy.hasModifications",
            "completionEvents": [
              "onView:squiggyModificationsPanel"
            ]
          },
          {
            "id": "loadOwnData",
            "title": "Load Your Own Data",
            "description": "Ready to explore your own data? Squiggy supports:\n\n**POD5 Files:**\nContain raw nanopore signal data from Oxford Nanopore sequencers.\n\n[Open POD5 File](command:squiggy.openPOD5)\n\n**BAM Files:**\nProvide base annotations and modification calls (requires .bai index).\n\n[Open BAM File](command:squiggy.openBAM)\n\n**Session Management:**\n- Save sessions: [Save Session](command:squiggy.saveSession)\n- Restore sessions: [Restore Session](command:squiggy.restoreSession)\n- Export/import sessions for sharing\n\n**Tips:**\n- Load POD5 first, then BAM for best experience\n- BAM files must be indexed (.bai)\n- Use demo data to test features before loading large files\n\nHappy exploring!",
            "media": {
              "image": "resources/walkthrough/load-files.png",
              "altText": "File loading interface"
            },
            "completionEvents": [
              "onCommand:squiggy.openPOD5",
              "onCommand:squiggy.openBAM"
            ]
          }
        ]
      }
    ]
  },
  "scripts": {
    "sync": "node scripts/sync-version.js",
    "vscode:prepublish": "npm run sync && npm run compile",
    "compile": "npm run sync && webpack --mode production",
    "watch": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "package": "vsce package --out build/"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "22.x",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.1",
    "@types/react-window": "^1.8.5",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/vsce": "^3.6.2",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.9.1",
    "eslint": "^9.39.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "ovsx": "^0.10.6",
    "prettier": "^3.6.2",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@posit-dev/positron": "^0.1.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-window": "^1.8.10"
  }
}
