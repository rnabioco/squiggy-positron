{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc",
      "label": "npm: compile",
      "detail": "tsc -p ./"
    },
    {
      "label": "setup-test-workspace",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/setup-test-workspace.sh",
      "presentation": {
        "reveal": "silent",
        "close": true
      }
    },
    {
      "label": "prepare-extension",
      "dependsOn": [
        "setup-test-workspace",
        "npm: compile"
      ],
      "dependsOrder": "sequence"
    }
  ]
}
